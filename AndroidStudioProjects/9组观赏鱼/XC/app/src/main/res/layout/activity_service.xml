<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground3"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@color/colorBackground1"
        android:gravity="center|bottom"
        android:paddingBottom="15dp"
        android:text="帮助中心"
        android:textColor="@color/colorText1"
        android:textSize="25sp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="2"
        app:cardElevation="4dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground4"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:textSize="30dp"
                android:textColor="@color/colorBackground1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="联系我们"/>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:text="邮箱:liovo@163.com"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:text="QQ:3248355202"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />
<!--                <TextView-->
<!--                    android:layout_width="150dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:text="GitHub:lanyueOvO"-->
<!--                    android:textSize="18dp"-->
<!--                    android:textColor="@color/black"-->
<!--                    />-->
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:orientation="vertical"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="12dp"
        android:weightSum="4">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="猜你想问："
            android:textColor="@color/colorBackground1"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text=" > 什么时候发货？"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tx_sv2"
            android:autoLink="all"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text=" > 发什么快递？"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text=" > 观赏鱼如何喂养？"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text=" > 该如何选择合适自己的套餐？"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>